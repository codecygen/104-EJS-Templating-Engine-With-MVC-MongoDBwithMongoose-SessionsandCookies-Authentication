<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="signup-and-login.css" />
</head>
<body>
    <%- include('includes/nav.ejs') %>

    <% if (selectedUser.userId) { %>
        <p class="centered flex">Welcome <%= selectedUser.userName %></p>
        <form action="/logout" class="centered" method="POST">
            <button class="btn" type="submit">Logout</button>
        </form>
    <% } else { %>
        <form action="/signup" class="centered flex" method="POST">
            <label for="username">Username</label>
            <input type="text" id="username" name="entered-username">

            <label for="email">Email</label>
            <input type="email" id="email" name="entered-email">
    
            <label for="password">Password</label>
            <input type="password" id="password" name="entered-password">

            <label for="password-repeat">Repeat Password</label>
            <input type="password" id="password-repeat" name="entered-password-repeat">

            <label for="admin">Are you an admin?</label>
            <input type="checkbox" id="admin" name="is-admin">
    
            <button class="btn" type="submit">Signup</button>
        </form>
    <% } %>
</body>