<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="../signup-and-login.css" />
</head>
<body>
    <%- include('../includes/nav.ejs') %>

    <% if (pageMessage) { %>
        <p class="centered warning"><%= pageMessage %></p>
    <% } %>
    <h2 class="centered flex">Enter New Password</h2>
    <h3 class="centered flex"><%= resetEmail %></h3>
    <form action="/new_password" class="centered flex" method="POST">
        <label for="password1">Enter Password</label>
        <input type="password" id="password1" name="entered-pass">

        <label for="password2">Confirm Password</label>
        <input type="password" id="password2" name="entered-pass-confirm">

        <input type="hidden" name="_email" value=<%= resetEmail %>>
        <input type="hidden" name="_token" value=<%= resetToken %>>
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>

        <button class="btn" type="submit">Change Password</button>
    </form>
</body>