<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/main.css" >
</head>
<body>
    <%- include('includes/nav.ejs') %>

    <main class="centered">
        <!-- NodeJS-Mongoose-Pagination -->
        <% for (let i = 1; i <= totalPages; i++ ) { %> 
            <a 
                href="?page=<%= i %>" 
                class="<%= currentPage === i ? 'active-page' : '' %>"
            >
                <%= i %>
            </a>
        <% } %>
        
  
        <h1><%= blogData.blogTitle %></h1>
        <p class="justified"><%= blogData.blogContent %></p>
        
    </main>

</body>
</html>