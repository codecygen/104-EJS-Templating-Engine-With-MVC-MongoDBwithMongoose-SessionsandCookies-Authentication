<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/main.css" >
</head>
<body>
    <%- include('includes/nav.ejs') %>

    <main class="centered">
        <% for (let i = 1; i <= totalPages; i++ ) { %> 
            <a 
                href="?page=<%= i %>" 
                class="<%= currentPage === i ? 'active-page' : '' %>"
            >
                <%= i %>
            </a>
        <% } %>
        
        <% blogData.forEach(blogPost => { %> 
            <h1><%= blogPost.blogTitle %></h1>
            <p class="justified"><%= blogPost.blogContent %></p>
        <% }); %>
    </main>

</body>
</html>