<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/forum.css" />
</head>
<body>
    <%- include('../includes/nav.ejs') %>

    <main>
        <h2 class="centered">Forum Page!</h2>
        <section class="centered flexbox">
           
            <div class="flex-forum" >
                <p id="warning-message">Submit Your Message</p>

                <label for="email">Email</label>
                <input type="email" id="email" name="entered-email" placeholder="Enter your email">

                <label for="password">Password</label>
                <input type="password" id="password" name="entered-password" placeholder="Enter your password">

                <label for="title">Title</label>
                <input type="text" id="title" name="entered-title" placeholder="Enter your title">
        
                <label for="message">Your Message</label>
                <textarea 
                    name="entered-message" 
                    id="message"
                    rows="4" 
                    cols="50" 
                    placeholder="Enter your message"
                ></textarea>

                <!-- CSRF-Attacks-Prevention -->
                <input type="hidden" id="csrf" name="_csrf" value=<%= csrfToken %>>
        
                <button class="btn" type="button">Send Post</button>
            </div>

            <div>Forum Section</div>
        </section>
    </main>

    <!-- type="module" is needed if you want to import other js files -->
    <!-- into forum.js -->
    <script type="module" src="/forum.js"></script>

</body>
</html>