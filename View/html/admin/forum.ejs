<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/forum.css" />
</head>
<body>
    <%- include('../includes/nav.ejs') %>

    <main>
        <h2 class="centered">Forum Page!</h2>
        <section class="centered flexbox">
           
            <div class="flex-forum" >
                <p id="warning-message">Please Enter Your Message</p>

                <label for="title">Title</label>
                <input type="text" id="title" name="entered-title" placeholder="Enter your title">
        
                <label for="message">Your Message</label>
                <textarea 
                    name="entered-message" 
                    id="message"
                    rows="4" 
                    cols="50" 
                    placeholder="Enter your message"
                ></textarea>
        
                <button class="btn" type="button">Send Post</button>
            </div>

            <div>Forum Section</div>
        </section>
    </main>

    <script src="/forum.js"></script>

</body>
</html>