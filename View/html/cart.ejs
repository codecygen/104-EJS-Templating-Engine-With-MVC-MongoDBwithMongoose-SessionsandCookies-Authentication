<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/shop/productList.css" />
    <link rel="stylesheet" href="/orders/checkout.css" />
</head>
<body>
    <%- include('includes/nav.ejs') %>
    <main class="centered">
        <h2>Checkout Page</h2>

        <% if(cartProducts.length > 0) { %>
            <div class="items">
                <% cartProducts.forEach((item) => { %>
                    <section>
                        <h3><%= item.productName %></h3>
                        <p><%= item.productDesc %></p>
                        <em>Price: $<%= item.productPrice %></em>
                        <em>Quantity: <%= item.qty %></em>
                    </section>
                <% }) %>
            </div>
            <p>Total Price: <%= cartPrice %></p>
            <form action="/orders" method="POST">
                <input type="hidden" id="csrf" name="_csrf" value=<%= csrfToken %>>
                <button type="submit">Order Now</button>
            </form>
        <% } else { %>
            <p>There are no products!</p>        
        <% } %>
    </main>

</body>
</html>